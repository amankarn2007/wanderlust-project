<% layout("/layouts/boilerplate") %>
<body>
    
    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7; 
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .icon{
            font-size: medium;
        }
        .icon:hover{
            font-size: 22px;
        }
        .filter p{
            font-size: small;
        }
        .tax-toggle{
            text-align: center;
            margin-top: 2.5rem;
            margin-inline-start: auto;
            border: 1px solid  black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            margin-top: 1.5rem;
        }

        @media (max-width: 992px) {
            .filters.farms,
            .filter.archtic,
            .filter.camping{
                display: none;
            }
        }
        @media (max-width: 768px) {
            .filter.castles,
            .filter.pools {
                display: none;
            }
        }
        @media (max-width: 576px) {
            #filters .filter {
                display: none;
            }
        }
        @media (max-width: 480px) {
            .tax-toggle {
            display: none;
            }
        }

        .tax-info{
            display: none;
        }
        
    </style>


    <!--filters-->
    <div id="filters" class="d-flex flex-wrap">

        <a class="filter trending text-decoration-none text-dark" href="/listings/category/trending">
            <div><i class="fa-solid fa-fire icon"></i></div>
            <p>Trending</p>
        </a>

        <a class="filter rooms text-decoration-none text-dark" href="/listings/category/rooms">
            <div> <i class="fa-solid fa-bed icon"></i> </div>
            <p>Rooms</p>
        </a>

        <a class="filter iconic cities text-decoration-none text-dark" href="/listings/category/iconic-cities">
            <div> <i class="fa-solid fa-mountain-city icon"></i> </div>
            <p>Iconic Cities</p>
        </a>

        <a class="filter mountains text-decoration-none text-dark" href="/listings/category/mountains">
            <div><i class="fa-solid fa-mountain icon"></i></div>
            <p>Mountains</p>
        </a>

        <a class="filter castles text-decoration-none text-dark" href="/listings/category/castles">
            <div> <i class="fa-brands fa-fort-awesome icon"></i> </div>
            <p>Castles</p>
        </a>

        <a class="filter pools text-decoration-none text-dark" href="/listings/category/amazing-pools">
            <div><i class="fa-solid fa-person-swimming icon"></i></div>
            <p>Amazing pools</p>
        </a>

        <a class="filter camping text-decoration-none text-dark" href="/listings/category/camping">
            <div> <i class="fa-solid fa-campground icon"></i> </div>
            <p>Camping</p>
        </a>
        
        <a class="filter farms text-decoration-none text-dark" href="/listings/category/farms">
            <div> <i class="fa-solid fa-cow icon"></i> </div>
            <p>Farms</p>
        </a>

        <a class="filter pools text-decoration-none text-dark" href="/listings/category/amazing-pools">
            <div><i class="fa-solid fa-person-swimming icon"></i></div>
            <p>Amazing pools</p>
        </a>

        <a class="filter camping text-decoration-none text-dark" href="/listings/category/doams">
            <div> <i class="fa-solid fa-igloo icon"></i> </div>
            <p>Doams</p>
        </a>

        <a class="filter archtic text-decoration-none text-dark" href="/listings/category/boat">
            <div> <i class="fa-solid fa-sailboat icon"></i> </div>
            <p>Boats</p>
        </a>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display totel after taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
        <%for(let listing of allListings){%>

            <a href="/listings/<%=listing._id%>" class="listing-link">

                <div class="card col listing-card" >
                    <div class="card-img-overlay">created by aman</div>

                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                    
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b> <br>
                            &#8377 <%=listing.price.toLocaleString("en-IN")%> / night
                            <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                        </p>
                    </div>

                </div>

            </a>
        <%}%>
    </div>

</body>


<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
        }
    })
</script>